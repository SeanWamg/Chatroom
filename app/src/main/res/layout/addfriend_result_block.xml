<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/addFriend_sticker"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/addFriend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addFriend_sticker"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="name"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/addFriend_event"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addFriend_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="加入"
        android:background="#0242E6"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/addFriend_myself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addFriend_name"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="這是自己"
        android:textSize="20sp"
        android:visibility="gone"/>

</RelativeLayout>