<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="right"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/chatroom_my_timeStub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/time_block"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/chatroom_my_isRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已讀" />

            <TextView
                android:id="@+id/chatroom_my_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="時間" />
        </LinearLayout>

        <TextView
            android:id="@+id/chatroom_my_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mychatframe"
            android:gravity="center_horizontal"
            android:maxWidth="320dip"
            android:padding="19sp"
            android:paddingRight="10dp"
            android:text=""
            android:textSize="15.0sp" />
    </LinearLayout>


</LinearLayout>